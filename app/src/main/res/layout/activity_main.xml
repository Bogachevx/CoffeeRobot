<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/odinass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/buttonEspresso"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/espresso"
            android:backgroundTintMode="src_over"
            android:visibility="visible"
            app:layout_constraintBottom_toTopOf="@+id/buttonAmericano_m"
            app:layout_constraintStart_toStartOf="@+id/buttonAmericano_m" />

        <ImageView
            android:id="@+id/buttonAmericano_m"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginBottom="52dp"
            android:background="@drawable/americano"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.394"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/buttonLatte"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/latte"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/buttonCappuccino"
            app:layout_constraintTop_toBottomOf="@+id/buttonCappuccino" />

        <ImageView
            android:id="@+id/buttonCappuccino"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginStart="64dp"
            android:background="@drawable/capuccino"
            android:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/buttonEspresso"
            app:layout_constraintTop_toTopOf="@+id/buttonEspresso" />

        <EditText
            android:id="@+id/IP"
            android:layout_width="344dp"
            android:layout_height="132dp"
            android:layout_marginStart="44dp"
            android:layout_marginTop="68dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="192.168.0.2"
            android:textSize="30sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="288dp"
            android:layout_height="280dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.081"
            app:srcCompat="@drawable/logo_footer" />

        <Button
            android:id="@+id/button"
            android:layout_width="211dp"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:text="Button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="53dp" />

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>